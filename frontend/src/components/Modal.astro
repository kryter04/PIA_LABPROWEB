---
// Componente Modal reutilizable
interface Props {
  id: string;
  title: string;
  size?: 'sm' | 'md' | 'lg' | 'xl';
}

const { id, title, size = 'md' } = Astro.props;

const sizeClasses = {
  sm: 'max-w-md',
  md: 'max-w-lg',
  lg: 'max-w-2xl',
  xl: 'max-w-4xl'
};
---

<!-- Overlay del modal -->
<div id={id} class="modal fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
  <div class={`bg-white rounded-lg shadow-xl w-full ${sizeClasses[size]} mx-4 max-h-[90vh] overflow-y-auto`}>
    <!-- Header del modal -->
    <div class="flex items-center justify-between px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-semibold text-gray-900">{title}</h3>
      <button type="button" class="modal-close text-gray-400 hover:text-gray-600">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
    
    <!-- Contenido del modal -->
    <div class="px-6 py-4">
      <slot />
    </div>
    
    <!-- Footer del modal (opcional) -->
    <div class="px-6 py-4 border-t border-gray-200 bg-gray-50">
      <slot name="footer" />
    </div>
  </div>
</div>

<script>
  // Script para abrir/cerrar modales
  document.addEventListener('DOMContentLoaded', () => {
    // Abrir modal
    document.querySelectorAll('[data-modal-open]').forEach(btn => {
      btn.addEventListener('click', () => {
        const modalId = btn.getAttribute('data-modal-open') || '';
        const modal = document.getElementById(modalId);
        if (modal) {
          modal.classList.remove('hidden');
          modal.classList.add('flex');
        }
      });
    });

    // Cerrar modal
    document.querySelectorAll('.modal-close, .modal').forEach(element => {
      element.addEventListener('click', (e) => {
        const target = e.target as HTMLElement;
        
        if (target.classList.contains('modal') || target.closest('.modal-close')) {
          const modal = target.closest('.modal');
          if (modal) {
            modal.classList.add('hidden');
            modal.classList.remove('flex');
          }
        }
      });
    });

    // Prevenir que el click en el contenido cierre el modal
    document.querySelectorAll('.modal > div').forEach(content => {
      content.addEventListener('click', (e) => {
        e.stopPropagation();
      });
    });
  });
</script>
