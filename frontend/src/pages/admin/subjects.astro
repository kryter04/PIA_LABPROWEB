---
// Página: Listado de Materias (Administrador)
// Permite ver, crear, editar y eliminar materias
import AdminLayout from '../../components/AdminLayout.astro';
import Modal from '../../components/Modal.astro';
---

<AdminLayout title="Gestión de Materias" activePage="subjects">
    <!-- Encabezado -->
    <div class="flex items-center justify-between mb-8">
        <div>
            <h1 class="text-3xl font-bold text-gray-900">Listado de Materias FIME</h1>
            <p class="text-gray-600 mt-2">Gestiona las materias registradas en el sistema</p>
        </div>
        <button 
            data-modal-open="subject-modal" 
            class="flex items-center gap-2 px-4 py-2 bg-green-600 text-white font-medium rounded-lg hover:bg-green-700 transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            Añadir nueva materia
        </button>
    </div>
    
    <!-- Loading state -->
    <div id="loading" class="flex justify-center py-12">
        <div class="w-12 h-12 border-4 border-gray-200 border-t-green-600 rounded-full animate-spin"></div>
    </div>
    
    <!-- Tabla de materias -->
    <div id="subjects-content" class="hidden bg-white rounded-lg shadow-sm overflow-hidden">
        <table class="w-full">
            <thead class="bg-gray-50 border-b border-gray-200">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nombre</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Departamento</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
                </tr>
            </thead>
            <tbody id="subjects-table-body" class="divide-y divide-gray-200"></tbody>
        </table>
        
        <!-- Paginación -->
        <div class="px-6 py-4 border-t border-gray-200">
            <div class="flex items-center justify-between">
                <div class="text-sm text-gray-700">
                    Mostrando <span id="subject-count" class="font-medium">0</span> materias
                </div>
            </div>
        </div>
    </div>
    
    <!-- Modal para crear/editar materia -->
    <Modal id="subject-modal" title="Añadir Materia" size="md">
        <form id="subject-form" class="space-y-4">
            <input type="hidden" id="subject-id" />
            
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Nombre de la materia</label>
                <input 
                    type="text" 
                    id="subject-name" 
                    required 
                    class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"
                    placeholder="Ej: Álgebra Lineal" />
            </div>
            
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Departamento</label>
                <input 
                    type="text" 
                    id="subject-department" 
                    required 
                    class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"
                    placeholder="Ej: Matemáticas" />
            </div>
        </form>
        
        <div slot="footer" class="flex justify-end gap-3">
            <button type="button" class="modal-close px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50">
                Cancelar
            </button>
            <button type="submit" form="subject-form" class="px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700">
                Guardar
            </button>
        </div>
    </Modal>
</AdminLayout>

<script>
    import { API_BASE_URL, getAuthHeaders } from '../../config/api.ts';
    import { requireAdmin } from '../../scripts/auth-guard';
    
    // Verificar autenticación de admin
    if (!requireAdmin()) {
        // El script auth-guard ya redirige
    }
    
    let isEditMode = false;
    
    // Cargar materias
    async function loadSubjects() {
        try {
            const response = await fetch(`${API_BASE_URL}/subjects`);
            
            if (!response.ok) throw new Error('Error al cargar materias');
            
            const subjects = await response.json();
            
            renderSubjects(subjects);
            
            // Mostrar contenido
            document.getElementById('loading')!.classList.add('hidden');
            document.getElementById('subjects-content')!.classList.remove('hidden');
            
        } catch (error) {
            console.error('Error cargando materias:', error);
            alert('Error al cargar las materias');
        }
    }
    
    // Renderizar tabla de materias
    function renderSubjects(subjects: any[]) {
        const tbody = document.getElementById('subjects-table-body')!;
        tbody.innerHTML = '';
        
        if (subjects.length === 0) {
            tbody.innerHTML = `
                <tr>
                    <td colspan="3" class="px-6 py-8 text-center text-gray-500">
                        No hay materias registradas
                    </td>
                </tr>
            `;
            document.getElementById('subject-count')!.textContent = '0';
            return;
        }
        
        document.getElementById('subject-count')!.textContent = subjects.length.toString();
        
        subjects.forEach(subject => {
            const tr = document.createElement('tr');
            tr.className = 'hover:bg-gray-50 transition-colors';
            tr.innerHTML = `
                <td class="px-6 py-4">
                    <div class="flex items-center">
                        <div class="w-10 h-10 rounded-lg bg-blue-100 flex items-center justify-center">
                            <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                            </svg>
                        </div>
                        <div class="ml-4">
                            <div class="text-sm font-medium text-gray-900">${subject.name}</div>
                        </div>
                    </div>
                </td>
                <td class="px-6 py-4">
                    <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
                        ${subject.departmentName || 'Sin departamento'}
                    </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <button 
                        onclick="editSubject(${subject.subjectId})"
                        class="text-green-600 hover:text-green-900 mr-3">
                        Editar
                    </button>
                    <button 
                        onclick="deleteSubject(${subject.subjectId}, '${subject.name}')"
                        class="text-red-600 hover:text-red-900">
                        Eliminar
                    </button>
                </td>
            `;
            tbody.appendChild(tr);
        });
    }
    
    // Abrir modal para crear materia
    document.querySelectorAll('[data-modal-open="subject-modal"]').forEach(btn => {
        btn.addEventListener('click', () => {
            isEditMode = false;
            const subjModal = document.getElementById('subject-modal');
            const title = subjModal?.querySelector('h3');
            if (title) title.textContent = 'Añadir Materia';
            (document.getElementById('subject-form') as HTMLFormElement).reset();
            (document.getElementById('subject-id') as HTMLInputElement).value = '';
        });
    });
    
    // Editar materia (función global)
    (window as any).editSubject = async function(subjectId: number) {
        try {
            // Obtener la materia de la lista actual
            const response = await fetch(`${API_BASE_URL}/subjects`);
            const subjects = await response.json();
            const subject = subjects.find((s: any) => s.subjectId === subjectId);
            
            if (!subject) throw new Error('Materia no encontrada');
            
            isEditMode = true;
            const subjModal = document.getElementById('subject-modal');
            const title = subjModal?.querySelector('h3');
            if (title) title.textContent = 'Editar Materia';
            (document.getElementById('subject-id') as HTMLInputElement).value = subjectId.toString();
            (document.getElementById('subject-name') as HTMLInputElement).value = subject.name;
            (document.getElementById('subject-department') as HTMLInputElement).value = subject.departmentName || '';
            
            // Abrir modal
            subjModal?.classList.remove('hidden');
            subjModal?.classList.add('flex');
            
        } catch (error) {
            console.error('Error cargando materia:', error);
            alert('Error al cargar los datos de la materia');
        }
    };
    
    // Eliminar materia (función global)
    (window as any).deleteSubject = async function(subjectId: number, subjectName: string) {
        if (!confirm(`¿Estás seguro de eliminar la materia "${subjectName}"?\n\nNota: No se puede eliminar si tiene reseñas asociadas.`)) return;
        
        try {
            const response = await fetch(`${API_BASE_URL}/admin/subjects/${subjectId}`, {
                method: 'DELETE',
                headers: getAuthHeaders()
            });
            
            if (!response.ok) {
                const error = await response.json();
                throw new Error(error.message || 'Error al eliminar materia');
            }
            
            alert('Materia eliminada correctamente');
            loadSubjects();
            
        } catch (error: any) {
            alert(error.message);
        }
    };
    
    // Enviar formulario
    document.getElementById('subject-form')?.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const subjectId = (document.getElementById('subject-id') as HTMLInputElement).value;
        const name = (document.getElementById('subject-name') as HTMLInputElement).value;
        const departmentName = (document.getElementById('subject-department') as HTMLInputElement).value;
        
        try {
            let response;
            const body = { name, departmentName };
            
            if (isEditMode && subjectId) {
                // Actualizar materia existente
                response = await fetch(`${API_BASE_URL}/admin/subjects/${subjectId}`, {
                    method: 'PUT',
                    headers: getAuthHeaders(),
                    body: JSON.stringify(body)
                });
            } else {
                // Crear nueva materia
                response = await fetch(`${API_BASE_URL}/admin/subjects`, {
                    method: 'POST',
                    headers: getAuthHeaders(),
                    body: JSON.stringify(body)
                });
            }
            
            if (!response.ok) {
                const error = await response.json();
                throw new Error(error.message || 'Error al guardar materia');
            }
            
            alert(isEditMode ? 'Materia actualizada correctamente' : 'Materia creada correctamente');
            
            // Cerrar modal y recargar
            document.getElementById('subject-modal')?.classList.add('hidden');
            document.getElementById('subject-modal')?.classList.remove('flex');
            loadSubjects();
            
        } catch (error: any) {
            alert(error.message);
        }
    });
    
    // Cargar materias al iniciar
    loadSubjects();
</script>
