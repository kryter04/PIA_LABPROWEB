---
// Página: Listado de Profesores (Administrador)
// Permite ver, crear, editar y eliminar profesores
import AdminLayout from '../../components/AdminLayout.astro';
import Modal from '../../components/Modal.astro';
---

<AdminLayout title="Gestión de Profesores" activePage="professors">
    <!-- Encabezado -->
    <div class="flex items-center justify-between mb-8">
        <div>
            <h1 class="text-3xl font-bold text-gray-900">Listado de Profesores FIME</h1>
            <p class="text-gray-600 mt-2">Gestiona los profesores registrados en el sistema</p>
        </div>
        <button 
            data-modal-open="professor-modal" 
            class="flex items-center gap-2 px-4 py-2 bg-green-600 text-white font-medium rounded-lg hover:bg-green-700 transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            Añadir nuevo profesor
        </button>
    </div>
    
    <!-- Loading state -->
    <div id="loading" class="flex justify-center py-12">
        <div class="w-12 h-12 border-4 border-gray-200 border-t-green-600 rounded-full animate-spin"></div>
    </div>
    
    <!-- Tabla de profesores -->
    <div id="professors-content" class="hidden bg-white rounded-lg shadow-sm overflow-hidden">
        <table class="w-full">
            <thead class="bg-gray-50 border-b border-gray-200">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nombre</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Asignatura</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Calificación</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
                </tr>
            </thead>
            <tbody id="professors-table-body" class="divide-y divide-gray-200"></tbody>
        </table>
        
        <!-- Paginación -->
        <div class="px-6 py-4 border-t border-gray-200">
            <div class="flex items-center justify-between">
                <div class="text-sm text-gray-700">
                    Página <span id="current-page" class="font-medium">1</span> de <span id="total-pages" class="font-medium">1</span>
                </div>
                <div class="flex gap-2">
                    <button id="prev-btn" class="px-3 py-1 rounded-md border border-gray-300 text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed">
                        Anterior
                    </button>
                    <button id="next-btn" class="px-3 py-1 rounded-md border border-gray-300 text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed">
                        Siguiente
                    </button>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Modal para crear/editar profesor -->
    <Modal id="professor-modal" title="Añadir Profesor" size="lg">
        <form id="professor-form" class="space-y-4">
            <input type="hidden" id="professor-id" />
            
            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Nombre completo</label>
                    <input 
                        type="text" 
                        id="professor-name" 
                        required 
                        class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"
                        placeholder="Ej: Dr. Carlos Rodríguez" />
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Título</label>
                    <select 
                        id="professor-title" 
                        required 
                        class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent">
                        <option value="Dr.">Dr.</option>
                        <option value="Dra.">Dra.</option>
                        <option value="M.C.">M.C.</option>
                        <option value="Ing.">Ing.</option>
                        <option value="Lic.">Lic.</option>
                        <option value="Prof.">Prof.</option>
                    </select>
                </div>
            </div>
            
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Departamento</label>
                <input 
                    type="text" 
                    id="professor-department" 
                    required 
                    class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"
                    placeholder="Ej: Ciencias de la Computación" />
            </div>
            
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">URL de Foto (opcional)</label>
                <input 
                    type="url" 
                    id="professor-photo" 
                    class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"
                    placeholder="https://ejemplo.com/foto.jpg" />
            </div>
            
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Universidades</label>
                <div id="universities-list" class="space-y-2 mb-2"></div>
                <p class="text-xs text-gray-500">Selecciona las universidades donde imparte</p>
            </div>
            
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Materias</label>
                <div id="subjects-list" class="space-y-2 mb-2 max-h-40 overflow-y-auto"></div>
                <p class="text-xs text-gray-500">Selecciona las materias que imparte</p>
            </div>
        </form>
        
        <div slot="footer" class="flex justify-end gap-3">
            <button type="button" class="modal-close px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50">
                Cancelar
            </button>
            <button type="submit" form="professor-form" class="px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700">
                Guardar
            </button>
        </div>
    </Modal>
</AdminLayout>

<script>
    import { API_BASE_URL, getAuthHeaders } from '../../config/api.ts';
    import { requireAdmin } from '../../scripts/auth-guard';
    
    // Verificar autenticación de admin
    if (!requireAdmin()) {
        // El script auth-guard ya redirige
    }
    
    let currentPage = 0;
    let totalPages = 0;
    let isEditMode = false;
    let universities: any[] = [];
    let subjects: any[] = [];
    
    // Cargar profesores con paginación
    async function loadProfessors(page = 0) {
        try {
            const response = await fetch(`${API_BASE_URL}/professors?page=${page}&size=10`);
            
            if (!response.ok) throw new Error('Error al cargar profesores');
            
            const data = await response.json();
            currentPage = data.number;
            totalPages = data.totalPages;
            
            renderProfessors(data.content);
            updatePagination();
            
            // Mostrar contenido
            document.getElementById('loading')!.classList.add('hidden');
            document.getElementById('professors-content')!.classList.remove('hidden');
            
        } catch (error) {
            console.error('Error cargando profesores:', error);
            alert('Error al cargar los profesores');
        }
    }
    
    // Cargar universidades y materias para el formulario
    async function loadFormData() {
        try {
            // Cargar universidades
            const univResponse = await fetch(`${API_BASE_URL}/universities`);
            universities = await univResponse.json();
            
            // Cargar materias
            const subjResponse = await fetch(`${API_BASE_URL}/subjects`);
            subjects = await subjResponse.json();
            
        } catch (error) {
            console.error('Error cargando datos del formulario:', error);
        }
    }
    
    // Renderizar tabla de profesores
    function renderProfessors(professors: any[]) {
        const tbody = document.getElementById('professors-table-body')!;
        tbody.innerHTML = '';
        
        if (professors.length === 0) {
            tbody.innerHTML = `
                <tr>
                    <td colspan="4" class="px-6 py-8 text-center text-gray-500">
                        No hay profesores registrados
                    </td>
                </tr>
            `;
            return;
        }
        
        professors.forEach(prof => {
            const tr = document.createElement('tr');
            tr.className = 'hover:bg-gray-50 transition-colors';
            tr.innerHTML = `
                <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center">
                        <img src="${prof.photoUrl || '/default-avatar.png'}" alt="${prof.name}" 
                             class="w-10 h-10 rounded-full object-cover" />
                        <div class="ml-4">
                            <div class="text-sm font-medium text-gray-900">${prof.name}</div>
                            <div class="text-sm text-gray-500">${prof.title || ''}</div>
                        </div>
                    </div>
                </td>
                <td class="px-6 py-4">
                    <div class="text-sm text-gray-900">
                        ${prof.subjects?.slice(0, 2).join(', ') || 'Sin materias'}
                        ${prof.subjects?.length > 2 ? `<span class="text-gray-500">+${prof.subjects.length - 2} más</span>` : ''}
                    </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center gap-1">
                        <span class="text-yellow-400">★</span>
                        <span class="text-sm font-medium text-gray-900">${prof.averageRating?.toFixed(1) || 'N/A'}</span>
                        <span class="text-sm text-gray-500">(${prof.reviewCount || 0})</span>
                    </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <button 
                        onclick="editProfessor(${prof.professorId})"
                        class="text-green-600 hover:text-green-900 mr-3">
                        Editar
                    </button>
                    <button 
                        onclick="deleteProfessor(${prof.professorId}, '${prof.name}')"
                        class="text-red-600 hover:text-red-900">
                        Eliminar
                    </button>
                </td>
            `;
            tbody.appendChild(tr);
        });
    }
    
    // Actualizar paginación
    function updatePagination() {
        document.getElementById('current-page')!.textContent = (currentPage + 1).toString();
        document.getElementById('total-pages')!.textContent = totalPages.toString();
        
        const prevBtn = document.getElementById('prev-btn') as HTMLButtonElement;
        const nextBtn = document.getElementById('next-btn') as HTMLButtonElement;
        
        prevBtn.disabled = currentPage === 0;
        nextBtn.disabled = currentPage >= totalPages - 1;
    }
    
    // Manejadores de paginación
    document.getElementById('prev-btn')?.addEventListener('click', () => {
        if (currentPage > 0) loadProfessors(currentPage - 1);
    });
    
    document.getElementById('next-btn')?.addEventListener('click', () => {
        if (currentPage < totalPages - 1) loadProfessors(currentPage + 1);
    });
    
    // Renderizar checkboxes de universidades y materias
    function renderFormSelections() {
        // Universidades
        const univList = document.getElementById('universities-list')!;
        univList.innerHTML = '';
        universities.forEach(univ => {
            const label = document.createElement('label');
            label.className = 'flex items-center gap-2';
            label.innerHTML = `
                <input type="checkbox" class="university-check" value="${univ.universityId}" 
                       class="w-4 h-4 text-green-600 border-gray-300 rounded focus:ring-green-500" />
                <span class="text-sm text-gray-700">${univ.name}</span>
            `;
            univList.appendChild(label);
        });
        
        // Materias
        const subjList = document.getElementById('subjects-list')!;
        subjList.innerHTML = '';
        subjects.forEach(subj => {
            const label = document.createElement('label');
            label.className = 'flex items-center gap-2';
            label.innerHTML = `
                <input type="checkbox" class="subject-check" value="${subj.subjectId}" 
                       class="w-4 h-4 text-green-600 border-gray-300 rounded focus:ring-green-500" />
                <span class="text-sm text-gray-700">${subj.name}</span>
            `;
            subjList.appendChild(label);
        });
    }
    
    // Abrir modal para crear profesor
    document.querySelectorAll('[data-modal-open="professor-modal"]').forEach(btn => {
        btn.addEventListener('click', () => {
            isEditMode = false;
            const profModal = document.getElementById('professor-modal');
            const title = profModal?.querySelector('h3');
            if (title) title.textContent = 'Añadir Profesor';
            (document.getElementById('professor-form') as HTMLFormElement).reset();
            (document.getElementById('professor-id') as HTMLInputElement).value = '';
            renderFormSelections();
        });
    });
    
    // Editar profesor (función global)
    (window as any).editProfessor = async function(professorId: number) {
        try {
            const response = await fetch(`${API_BASE_URL}/professors/${professorId}`);
            
            if (!response.ok) throw new Error('Error al cargar profesor');
            
            const prof = await response.json();
            
            isEditMode = true;
            const profModal = document.getElementById('professor-modal');
            const title = profModal?.querySelector('h3');
            if (title) title.textContent = 'Editar Profesor';
            (document.getElementById('professor-id') as HTMLInputElement).value = professorId.toString();
            (document.getElementById('professor-name') as HTMLInputElement).value = prof.name;
            (document.getElementById('professor-title') as HTMLSelectElement).value = prof.title || 'Dr.';
            (document.getElementById('professor-department') as HTMLInputElement).value = prof.departmentName || '';
            (document.getElementById('professor-photo') as HTMLInputElement).value = prof.photoUrl || '';
            
            renderFormSelections();
            
            // Marcar universidades y materias seleccionadas
            // Nota: Esto requeriría los IDs reales de la API
            
            // Abrir modal
            profModal?.classList.remove('hidden');
            profModal?.classList.add('flex');
            
        } catch (error) {
            console.error('Error cargando profesor:', error);
            alert('Error al cargar los datos del profesor');
        }
    };
    
    // Eliminar profesor (función global)
    (window as any).deleteProfessor = async function(professorId: number, profName: string) {
        if (!confirm(`¿Estás seguro de eliminar al profesor "${profName}"?`)) return;
        
        try {
            const response = await fetch(`${API_BASE_URL}/admin/professors/${professorId}`, {
                method: 'DELETE',
                headers: getAuthHeaders()
            });
            
            if (!response.ok) {
                const error = await response.json();
                throw new Error(error.message || 'Error al eliminar profesor');
            }
            
            alert('Profesor eliminado correctamente');
            loadProfessors(currentPage);
            
        } catch (error: any) {
            alert(error.message);
        }
    };
    
    // Enviar formulario
    document.getElementById('professor-form')?.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const professorId = (document.getElementById('professor-id') as HTMLInputElement).value;
        const name = (document.getElementById('professor-name') as HTMLInputElement).value;
        const title = (document.getElementById('professor-title') as HTMLSelectElement).value;
        const departmentName = (document.getElementById('professor-department') as HTMLInputElement).value;
        const photoUrl = (document.getElementById('professor-photo') as HTMLInputElement).value;
        
        // Obtener IDs seleccionados
        const universityIds = Array.from(document.querySelectorAll('.university-check:checked'))
            .map((el: any) => parseInt(el.value));
        const subjectIds = Array.from(document.querySelectorAll('.subject-check:checked'))
            .map((el: any) => parseInt(el.value));
        
        if (universityIds.length === 0) {
            alert('Selecciona al menos una universidad');
            return;
        }
        
        if (subjectIds.length === 0) {
            alert('Selecciona al menos una materia');
            return;
        }
        
        try {
            let response;
            const body = { name, title, departmentName, photoUrl, universityIds, subjectIds };
            
            if (isEditMode && professorId) {
                // Actualizar profesor existente
                response = await fetch(`${API_BASE_URL}/admin/professors/${professorId}`, {
                    method: 'PUT',
                    headers: getAuthHeaders(),
                    body: JSON.stringify(body)
                });
            } else {
                // Crear nuevo profesor
                response = await fetch(`${API_BASE_URL}/admin/professors`, {
                    method: 'POST',
                    headers: getAuthHeaders(),
                    body: JSON.stringify(body)
                });
            }
            
            if (!response.ok) {
                const error = await response.json();
                throw new Error(error.message || 'Error al guardar profesor');
            }
            
            alert(isEditMode ? 'Profesor actualizado correctamente' : 'Profesor creado correctamente');
            
            // Cerrar modal y recargar
            document.getElementById('professor-modal')?.classList.add('hidden');
            document.getElementById('professor-modal')?.classList.remove('flex');
            loadProfessors(currentPage);
            
        } catch (error: any) {
            alert(error.message);
        }
    });
    
    // Inicializar
    async function init() {
        await loadFormData();
        await loadProfessors();
    }
    
    init();
</script>
