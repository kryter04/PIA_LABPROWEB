---
// src/layouts/MainLayout.astro
// Este es el "molde" para todas tus páginas

import '../styles/global.css'; // Estilos base de Tailwind
import Header from '../components/Header.astro'; // El menú de arriba
import Footer from '../components/Footer.astro'; // El pie de página

interface Props {
  title: string; // Título de la pestaña del navegador
}
const { title } = Astro.props;
---
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title} - RateMyProfs</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
      html { font-family: 'Inter', sans-serif; }
    </style>
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">
    <Header />
    <main class="flex-grow container mx-auto px-4 py-12">
        <slot /> 
    </main>
    <Footer />
</body>
</html>